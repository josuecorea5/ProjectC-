@page
@model EscuelaSystem.Web.Pages.MateriaModel
@{
}

<h1>Listado de Materias</h1>
<a class="btn btn-sm btn-success" asp-area="" asp-page="/CrearMateria">Crear Nuevo</a>
<br /> <br />
<table class="table table-bordered ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Código</th>
            <th>Nombre</th>
            <th>Habilitada</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Materias)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Codigo</td>
                <td>@item.Descripcion</td>
                <td>
                    @if (item.Habilitada)
                    {
                        <input type="checkbox" checked="checked" disabled />
                    }
                    else
                    {
                        <input type="checkbox" checked="checked" disabled />
                    }

                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditarMateria" asp-route-id="@item.Id">Editar</a>
                </td>
            </tr>
        }

    </tbody>

</table>

